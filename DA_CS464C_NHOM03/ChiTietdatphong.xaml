<Window x:Class="DA_CS464C_NHOM03.ChiTietdatphong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Quản lý Đặt phòng" Height="650" Width="1050">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Quản lý Đặt phòng Khách sạn"
                   FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="2"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5">
            <GroupBox Header="Thông tin khách hàng" Width="400" Margin="5">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Mã khách hàng:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtMaKH" Grid.Row="0" Grid.Column="1" Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Tên khách hàng:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTenKhach" Grid.Row="1" Grid.Column="1" Margin="5" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Số điện thoại:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSDT" Grid.Row="2" Grid.Column="1" Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="CCCD:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCCCD" Grid.Row="3" Grid.Column="1" Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Email:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Grid.Row="4" Grid.Column="1" Margin="5"/>
                </Grid>
            </GroupBox>
            <GroupBox Header="Thông tin phòng" Width="400">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Mã  phòng:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="cbMaphong" Width="200" >
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Loại phòng:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="cbLoaiPhong" Width="200" >
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Số phòng:" Width="100" VerticalAlignment="Top"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="cbSophong" Width="200" >
                            </TextBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                        <TextBlock Text="Ngày nhận:" Width="80" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpNgayNhan" Width="120" Height="25"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                        <TextBlock Text="Ngày trả:" Width="80" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpNgayTra" Width="120" Height="25"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Tổng giá:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtGiaPhong" Width="200" Height="25"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <GroupBox Grid.Row="2" Header="Thông tin đặt phòng" Height="260" Margin="10" Grid.RowSpan="2" VerticalAlignment="Top">
            <StackPanel Margin="10">
                <DataGrid x:Name="dgOrder" Grid.Row="2" CanUserAddRows="False" IsReadOnly="True" AutoGenerateColumns="False" Margin="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã đặt phòng " Width="120"/>
                        <DataGridTextColumn Header="Mã Khách hàng" Width="120"/>
                        <DataGridTextColumn Header="Mã phòng" Width="120"/>
                        <DataGridTextColumn Header="Loại phòng" Width="120"/>
                        <DataGridTextColumn Header="Số lượng" Width="100"/>
                        <DataGridTextColumn Header="Ngày nhận " Width="*"/>
                        <DataGridTextColumn Header="Ngày trả " Width="*"/>
                        <DataGridTextColumn Header="Thành tiền" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="3" Height="50">
            <Button Content="Sửa" Width="120" Margin="10"/>
            <Button Content="Xóa" Width="120" Margin="10"/>
            <Button Content="Tìm kiếm" Width="120" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
