<Window x:Class="DA_CS464C_NHOM03.Dichvu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Dịch vụ" Height="650" Width="950" WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Thông tin dịch vụ" FontSize="14" Grid.Row="0" Grid.Column="0" Margin="5">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Mã dịch vụ:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Height="25"/>
                <Label Grid.Row="1" Grid.Column="0" Content="Tên dịch vụ:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Height="25"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Loại dịch vụ:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Height="25"/>
                <Label Grid.Row="3" Grid.Column="0" Content="Mô tả:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Height="25"/>
                <Label Grid.Row="4" Grid.Column="0" Content="Khung giờ hoạt động:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" Height="25"/>
                <Label Grid.Row="5" Grid.Column="0" Content="Đơn giá:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="1" Height="25"/>
                <Label Grid.Row="6" Grid.Column="0" Content="Tình trạng:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="6" Grid.Column="1" Height="25">
                    <ComboBoxItem Content="Trống"/>
                    <ComboBoxItem Content="Đã đặt"/>
                    <ComboBoxItem Content="Đang sử dụng"/>
                </ComboBox>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="dgOrder" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"
                  CanUserAddRows="False" IsReadOnly="True" AutoGenerateColumns="False" FontSize="13"
                  RowHeight="30" AlternatingRowBackground="#EFEFEF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã dịch vụ " Width="*"/>
                <DataGridTextColumn Header="Tên dịch vụ" Width="*"/>
                <DataGridTextColumn Header="Loại dịch vụ" Width="*"/>
                <DataGridTextColumn Header="Mô tả " Width="100"/>
                <DataGridTextColumn Header="Khung giờ hoạt động " Width="*"/>
                <DataGridTextColumn Header="Đơn giá " Width="*"/>
                <DataGridTextColumn Header="Tình trạng " Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="Thêm mới" Width="120" Height="35" Margin="10"/>
            <Button Content="Cập nhật" Width="120" Height="35" Margin="10"/>
            <Button Content="Xóa" Width="120" Height="35" Margin="10"/>
            <Button Content="Tìm kiếm" Width="120" Height="35" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
