<Window x:Class="DA_CS464C_NHOM03.DatPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Quản lý Đặt phòng" Height="650" Width="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Quản lý Đặt phòng Khách sạn"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="2"/>

        <!-- Thông tin khách hàng và phòng -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,15">

            <!-- Thông tin khách hàng -->
            <GroupBox Header="Thông tin khách hàng" Width="400" Margin="0,0,15,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên khách hàng:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTenKhach" Grid.Row="0" Grid.Column="1"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Số điện thoại:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSDT" Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="CCCD:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCCCD" Grid.Row="2" Grid.Column="1"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="1"/>
                </Grid>
            </GroupBox>

            <!-- Thông tin phòng -->
            <GroupBox Header="Thông tin phòng" Width="400">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Loại phòng:" Width="100" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cbLoaiPhong" Width="200" SelectionChanged="cbLoaiPhong_SelectionChanged">
                            <ComboBoxItem Content="VIP"/>
                            <ComboBoxItem Content="Thường"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Số phòng:" Width="100" VerticalAlignment="Top"/>
                        <StackPanel Orientation="Horizontal">
                            <ListBox x:Name="lbSoPhong" Width="120" Height="120" SelectionMode="Multiple">
                                <ListBox.ItemsSource>
                                    <x:Array Type="{x:Type sys:Int32}">
                                        <sys:Int32>1</sys:Int32>
                                        <sys:Int32>2</sys:Int32>
                                        <sys:Int32>3</sys:Int32>
                                        <sys:Int32>4</sys:Int32>
                                        <sys:Int32>5</sys:Int32>
                                        <sys:Int32>6</sys:Int32>
                                        <sys:Int32>7</sys:Int32>
                                        <sys:Int32>8</sys:Int32>
                                        <sys:Int32>9</sys:Int32>
                                        <sys:Int32>10</sys:Int32>
                                    </x:Array>
                                </ListBox.ItemsSource>
                            </ListBox>
                            <Button x:Name="btnChonPhong" Content="Chọn" Width="80" Height="30" Margin="10,0,0,0" VerticalAlignment="Center" Click="btnChonPhong_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Tổng giá:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtGiaPhong" Width="200" IsReadOnly="True"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Thông tin đặt phòng -->
        <GroupBox Grid.Row="2" Header="Thông tin đặt phòng">
            <StackPanel Margin="10">
                <!-- Ngày nhận & giờ nhận -->
                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                    <TextBlock Text="Ngày nhận:" Width="80" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpNgayNhan" Width="120"/>
                    <TextBlock Text="Giờ nhận:" Width="70" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="cbGioNhan" Width="80">
                        <!-- Giờ từ 0h đến 23h -->
                        <ComboBoxItem Content="00:00"/>
                        <ComboBoxItem Content="01:00"/>
                        <ComboBoxItem Content="02:00"/>
                        <ComboBoxItem Content="03:00"/>
                        <ComboBoxItem Content="04:00"/>
                        <ComboBoxItem Content="05:00"/>
                        <ComboBoxItem Content="06:00"/>
                        <ComboBoxItem Content="07:00"/>
                        <ComboBoxItem Content="08:00"/>
                        <ComboBoxItem Content="09:00"/>
                        <ComboBoxItem Content="10:00"/>
                        <ComboBoxItem Content="11:00"/>
                        <ComboBoxItem Content="12:00"/>
                        <ComboBoxItem Content="13:00"/>
                        <ComboBoxItem Content="14:00"/>
                        <ComboBoxItem Content="15:00"/>
                        <ComboBoxItem Content="16:00"/>
                        <ComboBoxItem Content="17:00"/>
                        <ComboBoxItem Content="18:00"/>
                        <ComboBoxItem Content="19:00"/>
                        <ComboBoxItem Content="20:00"/>
                        <ComboBoxItem Content="21:00"/>
                        <ComboBoxItem Content="22:00"/>
                        <ComboBoxItem Content="23:00"/>
                    </ComboBox>
                </StackPanel>

                <!-- Ngày trả & giờ trả -->
                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                    <TextBlock Text="Ngày trả:" Width="80" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpNgayTra" Width="120"/>
                    <TextBlock Text="Giờ trả:" Width="70" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="cbGioTra" Width="80">
                        <ComboBoxItem Content="00:00"/>
                        <ComboBoxItem Content="01:00"/>
                        <ComboBoxItem Content="02:00"/>
                        <ComboBoxItem Content="03:00"/>
                        <ComboBoxItem Content="04:00"/>
                        <ComboBoxItem Content="05:00"/>
                        <ComboBoxItem Content="06:00"/>
                        <ComboBoxItem Content="07:00"/>
                        <ComboBoxItem Content="08:00"/>
                        <ComboBoxItem Content="09:00"/>
                        <ComboBoxItem Content="10:00"/>
                        <ComboBoxItem Content="11:00"/>
                        <ComboBoxItem Content="12:00"/>
                        <ComboBoxItem Content="13:00"/>
                        <ComboBoxItem Content="14:00"/>
                        <ComboBoxItem Content="15:00"/>
                        <ComboBoxItem Content="16:00"/>
                        <ComboBoxItem Content="17:00"/>
                        <ComboBoxItem Content="18:00"/>
                        <ComboBoxItem Content="19:00"/>
                        <ComboBoxItem Content="20:00"/>
                        <ComboBoxItem Content="21:00"/>
                        <ComboBoxItem Content="22:00"/>
                        <ComboBoxItem Content="23:00"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Nút hành động -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Đặt phòng" Width="120" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>